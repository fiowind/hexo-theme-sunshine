<header id="header">
  <div id="banner"></div>
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <h1 id="logo-wrap">
        <% if (!pagetitle){ %>
          <a href="<%- url_for() %>" id="logo"><%= config.title %> Blog</a>
        <% } else {%>
          <a href="<%= post.link %>" id="logo"><%= post.title %></a>
        <% } %>
      </h1>
      <% if (!pagetitle){ %>
        <% if (theme.subtitle){ %>
          <h2 id="subtitle-wrap">
            <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
          </h2>
        <% } %>
      <% } else {%>
        <% if (post.subtitle){ %>
          <h2 id="subtitle-wrap">
            <a href="<%= post.link %>" id="subtitle"><%= post.subtitle %></a>
          </h2>
        <% } %>
      <% } %>
    </div>
    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a href="<%- url_for() %>" class="nav-icon"><%= config.title %> Blog</a>
      </nav>
      <nav id="sub-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
        <% if (theme.rss){ %>
          <a id="nav-rss-link" class="nav-icon" href="<%- theme.rss %>" title="<%= __('rss_feed') %>"></a>
        <% } %>
        <a id="nav-search-btn" class="nav-icon" title="<%= __('search') %>"></a>
      </nav>
      <div id="search-form-wrap">
        <%- search_form({button: '&#xF002;'}) %>
      </div>
    </div>
  </div>

</header>